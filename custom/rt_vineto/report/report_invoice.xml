<!--                                <tr>-->
<!--                                    <td style="border: 1px solid black" class="col-auto mw-100 mb-2">-->
<!--                                        <t t-raw="o.payment_condition"/>-->
<!--                                    </td>-->
<!--                                    <td style="border: 1px solid black" class="col-auto mw-100 mb-2">-->
<!--                                        <t t-raw="o.details"/>-->
<!--                                    </td>-->
<!--                                </tr>-->
<!--                            </tbody>-->
